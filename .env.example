# Core application
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=paylexa_dev
POSTGRES_USER=paylexa
POSTGRES_PASSWORD=change_me

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET=please_change_me
JWT_REFRESH_SECRET=also_change_me
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# SMTP (transactional email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=secret
SMTP_FROM=Paylexa <no-reply@paylexa.com>

# Morphon-X (AI security)
MORPHON_X_API_KEY=mx_dev_key
MORPHON_X_WEBHOOK_SECRET=mx_webhook_secret

# Card issuer integration
CARD_ISSUER_API_KEY=issuer_key
CARD_ISSUER_PROGRAM_ID=phoenix_program
CARD_ISSUER_WEBHOOK_SECRET=issuer_webhook_secret

# Top-up aggregator
TOPUP_AGGREGATOR_API_KEY=topup_key
TOPUP_AGGREGATOR_BASE_URL=https://sandbox-aggregator.example.com
TOPUP_AGGREGATOR_WEBHOOK_SECRET=topup_webhook_secret

# Optional third-party providers
APPLE_PAY_MERCHANT_ID=
GOOGLE_PAY_MERCHANT_ID=

# Feature flags
FEATURE_VIRTUAL_CARDS=true
FEATURE_PHOENIX_ANIMATIONS=true
