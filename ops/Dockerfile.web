# syntax=docker/dockerfile:1
FROM node:20-alpine AS deps
WORKDIR /app
COPY package.json pnpm-workspace.yaml ./
COPY paylexa-web/package.json paylexa-web/
RUN corepack enable && corepack prepare pnpm@8.15.4 --activate && pnpm install --filter paylexa-web...

FROM node:20-alpine AS builder
WORKDIR /app
COPY --from=deps /root/.local/share/pnpm /root/.local/share/pnpm
COPY --from=deps /app/node_modules /app/node_modules
COPY package.json pnpm-workspace.yaml ./
COPY shared-assets shared-assets
COPY paylexa-web paylexa-web
RUN corepack enable && corepack prepare pnpm@8.15.4 --activate && pnpm --filter paylexa-web build

FROM nginx:1.25-alpine AS runner
COPY --from=builder /app/paylexa-web/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
